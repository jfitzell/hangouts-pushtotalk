{
  "manifest_version": 2,

  "name": "Google Meet/Hangouts - Push To Talk",
  "description": "Chrome extension enabling PTT functionality for Google+ Hangouts",
  "version": "1.1",
  "options_page": "options.html",

  "page_action": {
    "default_title": "Google Meet/Hangouts - Push To Talk"           
    },

    "background": {
      "scripts": ["bg.js"],
      "persistent": false
      },

      "content_scripts": [
      {
        "matches": ["https://plus.google.com/hangouts/*", "https://hangouts.google.com/*", "https://meet.google.com/*"],
        "js": ["ptt.js"]
      }
      ]
    }

